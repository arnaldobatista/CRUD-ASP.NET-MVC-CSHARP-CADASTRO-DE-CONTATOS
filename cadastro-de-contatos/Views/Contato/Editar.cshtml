@model ContatoModel

@{
    ViewData["Title"] = "Editar contato";
}


<div class="text-center">
    <h1 class="display-4">Editar contato</h1>
    <br />
</div>


<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do contato">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Email do contato">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1">Telefone</label>
        <input type="number" asp-for="Telefone" class="form-control" placeholder="Telefone do contato">
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a role="button" class="btn btn-segundary" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</form>
