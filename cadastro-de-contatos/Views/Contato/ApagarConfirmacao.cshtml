@model ContatoModel

@{
    ViewData["Title"] = "Apagar contato?";
}

<div class="text-center">
    <h1 class="display-6">Relamente deseja apagar o contato @Model.Nome ?</h1>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Excluir</a>
    <a role="button" class="btn btn-segundary" asp-controller="Contato" asp-action="Index">Voltar</a>
</div>
